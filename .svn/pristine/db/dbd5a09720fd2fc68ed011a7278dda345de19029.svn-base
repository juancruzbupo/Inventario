        columns: [
            { data: 'subcuenta_id', name: 'subcuenta_id'},
            { data: 'marca_id', name: 'marca_id'},
            { data: 'modelo_id', name: 'modelo_id'},
            { data: 'nro_serie', name: 'nro_serie'},
